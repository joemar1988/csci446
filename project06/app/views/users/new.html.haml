%ul.menubar
  %li= link_to "login"
  %li= link_to "register", new_user_path 
.heading
  %h1= link_to "Gamez", games_path
  %h3 New User
%h1 New user
- form_for(@user) do |f|
  = f.error_messages
  %p
    = f.label :username
    %br/
    = f.text_field :username
  %p
    = f.label :password
    %br/
    = f.text_field :password
  %p
    = f.label :firstname
    %br/
    = f.text_field :firstname
  %p
    = f.label :lastname
    %br/
    = f.text_field :lastname
  %p
    = f.label :email
    %br/
    = f.text_field :email
  %p
    = f.label :photo
    %br/
    = f.file_field :photo
  %p
    = f.submit 'Create!', :title => "to main articles page (or errors are displayed)"