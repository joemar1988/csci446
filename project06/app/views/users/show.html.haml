%ul.menubar
  %li= link_to "login"
  %li= link_to "register", new_user_path 
.heading
  %h1= link_to "Gamez", games_path
  %h3 Show User
%ul
  = link_to image_tag('arrow_left.png', :border => 0), users_path, :title => "return to main users page"
  = link_to 'list all users', users_path, :title => "return to main users page"
  = link_to image_tag('database_edit.png', :border => 0), edit_user_path(@user), :title => "edit this user"
  = link_to 'edit', edit_user_path(@user), :title => "edit this user"
  = link_to image_tag('database_delete.png', :border => 0), @user, :confirm => 'Are you sure?', :method => :delete, :title => "delete this user"
  = link_to 'delete', @user, :confirm => 'Are you sure?', :method => :delete, :title => "delete this user"
  = link_to image_tag('email.png', :border => 0), :title => "email this user"
  = link_to 'email', :title => "email this user"
%h3
  Name: #{h @user.username}
%p
  %b Password: #{h @user.password}
%p
  %b First Name: #{h @user.firstname}
%p
  %b Last Name: #{h @user.lastname}
%p
  %b Email: #{h @user.email}
%p
  %b Photo:
  = image_tag @user.photo.url
%p
  %b games:
  %ul.gameList
    - @user_games.each do |game|
      %li
        = h game.title
        = link_to image_tag('magnifier.png', :border => 0), game, :title => "view this game"
        = link_to image_tag('database_edit.png', :border => 0), edit_game_path(game), :title => "edit this game"
        = link_to image_tag('database_delete.png', :border => 0), game, :confirm => 'Are you sure?', :method => :delete, :title => "delete this game"