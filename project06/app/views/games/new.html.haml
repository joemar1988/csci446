%ul.menubar
  %li= link_to "login"
  %li= link_to "register", new_user_path 
.heading
  %h1= link_to "Gamez", games_path
  %h3 New Game
- form_for(@game) do |f|
  = f.error_messages
  %p
    = f.label :title
    %br/
  %p
    = f.label :rating
    %br/
    = f.text_field :rating
  %p
    = f.label :creator
    %br/
    = f.text_field :creator
  %p
    = f.submit 'Create!', :title => "to main articles page (or errors are displayed)"