<h1>Articl.es</h1>
<h3>...my cousin works for Bit.ly</h3>

<%= link_to image_tag('arrow_left.png', :border => 0), article_path %><%= link_to 'back', article_path %>

<h2>Editing "<%=h @article.title %>"</h2>

<% form_for(@article) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :author %><br />
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Save Changes' %>
  </p>
<% end %>