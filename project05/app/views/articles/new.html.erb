<div class=heading>
	<h1>Articl.es</h1>
	<h3>...not just for the country of Spain</h3>
</div>

<ul class="menubar">
	<li><%= link_to "articles", articles_path %></li>
	<li><%= link_to "authors", authors_path %></li>
</ul>

<%= link_to image_tag('arrow_left.png', :border => 0), articles_path, :title => "return to main articles page" %>
<%= link_to 'list all articles', articles_path, :title => "return to main articles page" %>

<% form_for(@article) do |f| %>
  <%= f.error_messages %>
  <p>
	<%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
	<%= f.label :author_id %><br />
    <%= f.select :author_id, @authors.collect { |a| [a.name, a.id]}, :include_blank => true %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Create!', :title => "to main articles page (or errors are displayed)" %>
  </p>
<% end %>