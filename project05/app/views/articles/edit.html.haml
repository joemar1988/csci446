.heading
  %h1 Articl.es
  %h3 ...my cousin works for Bit.ly
%ul.menubar
  %li= link_to "articles", articles_path
  %li= link_to "authors", authors_path
= link_to image_tag('arrow_left.png', :border => 0), :back, :title => "return to previous page"
= link_to 'back', :back, :title => "return to previous page"
%h2
  Editing "#{h @article.title}"
- form_for(@article) do |f|
  = f.error_messages
  = f.error_messages
  %p
    = f.label :title
    %br/
    = f.text_field :title
  %p
    = f.label :author_id
    %br/
    = f.select :author_id, @authors.collect { |a| [a.name, a.id]}, :include_blank => true
  %p
    = f.label :description
    %br/
    = f.text_area :description
  %p
    = f.submit 'Save Changes', :title => "save and return to previous page (or errors are displayed)"