.heading
  %h1 Articl.es
  %h3 ...not just for the country of Spain
%ul.menubar
  %li= link_to "articles", articles_path
  %li= link_to "authors", authors_path
= link_to image_tag('arrow_left.png', :border => 0), articles_path, :title => "return to main articles page"
= link_to 'list all articles', articles_path, :title => "return to main articles page"
- form_for(@article) do |f|
  = f.error_messages
  %p
    = f.label :title
    %br/
    = f.text_field :title
  %p
    = f.label :author_id
    %br/
    = f.select :author_id, @authors.collect { |a| [a.name, a.id]}, :include_blank => true
  %p
    = f.label :description
    %br/
    = f.text_area :description
  %p
    = f.submit 'Create!', :title => "to main articles page (or errors are displayed)"